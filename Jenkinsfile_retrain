pipeline {
  agent any

  stages {
    stage('Pull Image From Registry') {
      steps {
        sh 'docker pull $DOCKER_BFLASK_IMAGE'
      }
    }
    stage('Retraining model') {
      steps {
        sh 'docker run $DOCKER_BFLASK_IMAGE ls'
        sh 'docker run $DOCKER_BFLASK_IMAGE python retrain.py'
      }
    }
     stage('Test') {
       steps {
         sh 'docker run $DOCKER_BFLASK_IMAGE -m pytest evaluate.py'
       }
     }

   stage('Deploy') {
      steps {
        withCredentials([usernamePassword(credentialsId: "${DOCKER_REGISTRY_CREDS}", passwordVariable: 'DOCKER_PASSWORD', usernameVariable: 'DOCKER_USERNAME')]) {
          sh "echo \$DOCKER_PASSWORD | docker login -u \$DOCKER_USERNAME --password-stdin docker.io"
          sh 'docker push $DOCKER_BFLASK_IMAGE'
          sh 'docker run -p 5000:5000 -td $DOCKER_BFLASK_IMAGE'
        }
      }
    }

  }

}